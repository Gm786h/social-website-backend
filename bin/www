#!/usr/bin/env node
/**
 * Module dependencies.
 */
var app = require('../app');
var debug = require('debug')('backend:server');
var http = require('http');
const db = require('../models');

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Database connection and initialization
 */
async function initializeDatabase() {
  try {
    // Test database connection
    await db.sequelize.authenticate();
    console.log('âœ… Database connection established successfully');
    
    // Check if tables exist before syncing
    const [tables] = await db.sequelize.query("SHOW TABLES");
    const tableNames = tables.map(table => Object.values(table)[0]);
    
    if (tableNames.length === 0) {
      // Database is empty, safe to sync
      console.log('ðŸ“‹ Database is empty. Creating tables...');
      await db.sequelize.sync({ force: false });
      console.log('âœ… Tables created successfully');
    } else {
      // Tables exist, check if our required tables exist
      console.log('ðŸ“‹ Found existing tables:', tableNames.join(', '));
      
      const requiredTables = ['Users', 'Posts']; // Add your model names here
      const missingTables = requiredTables.filter(table => !tableNames.includes(table));
      
      if (missingTables.length > 0) {
        console.log('âš ï¸ Missing tables:', missingTables.join(', '));
        console.log('ðŸ”¨ Creating missing tables only...');
        
        // Create only missing tables without altering existing ones
        await db.sequelize.sync({ force: false, alter: false });
        console.log('âœ… Missing tables created');
      } else {
        console.log('âœ… All required tables exist. Skipping sync to preserve data.');
      }
    }
  } catch (error) {
    console.error('âŒ Database initialization failed:', error.message);
    
    // Don't exit the process, let the app start anyway
    if (error.message.includes('Duplicate foreign key constraint')) {
      console.log('âš ï¸ Foreign key constraint conflict. Database may already be properly configured.');
    } else if (error.message.includes("doesn't exist")) {
      console.log('âš ï¸ Some tables are missing. Please check your database schema.');
    }
  }
}

// Initialize database and start server
initializeDatabase().then(() => {
  /**
   * Create HTTP server.
   */
  var server = http.createServer(app);

  /**
   * Listen on provided port, on all network interfaces.
   */
  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening);
  
  console.log('ðŸš€ Server starting on port', port);
});

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log('ðŸŽ‰ Server is listening on', bind);
}
